{
  "version": "1.0",
  "description": "Team definitions and hierarchy for orchestration system",
  "last_modified": "2025-01-19",
  "teams": {
    "engineering": {
      "name": "Engineering Team",
      "description": "Core development team for implementation tasks",
      "orchestrator": "engineering-director",
      "model_preference": "opus",
      "settings": {
        "max_parallel_agents": 5,
        "require_code_review": true,
        "test_coverage_threshold": 0.8,
        "auto_documentation": true,
        "branch_strategy": "feature/{epic}/{task}"
      },
      "members": [
        {
          "agent": "tech-lead",
          "role": "Technical Leadership",
          "capacity": 1,
          "skills": ["architecture", "code_review", "technical_spec", "data_model_design"],
          "model": "opus",
          "responsibilities": [
            "Write technical specifications",
            "Review all code changes",
            "Design system architecture",
            "Make technical decisions"
          ]
        },
        {
          "agent": "fullstack-eng",
          "role": "Full Stack Development",
          "capacity": 3,
          "skills": ["frontend", "backend", "api", "database", "integration"],
          "model": "sonnet",
          "responsibilities": [
            "Implement features end-to-end",
            "Write unit and integration tests",
            "Create API endpoints",
            "Build UI components"
          ]
        },
        {
          "agent": "ux-eng",
          "role": "UX Engineering",
          "capacity": 2,
          "skills": ["ui_components", "responsive_design", "accessibility", "design_systems"],
          "model": "sonnet",
          "responsibilities": [
            "Implement UI components",
            "Ensure responsive design",
            "Maintain design system",
            "Implement accessibility standards"
          ]
        },
        {
          "agent": "test-engineer",
          "role": "Quality Assurance",
          "capacity": 2,
          "skills": ["unit_testing", "integration_testing", "e2e_testing", "test_automation"],
          "model": "haiku",
          "responsibilities": [
            "Write comprehensive test suites",
            "Maintain test coverage",
            "Create test fixtures",
            "Automate test execution"
          ]
        },
        {
          "agent": "doc-writer",
          "role": "Documentation",
          "capacity": 1,
          "skills": ["technical_writing", "api_documentation", "user_guides"],
          "model": "haiku",
          "responsibilities": [
            "Write API documentation",
            "Maintain README files",
            "Create user guides",
            "Document architecture decisions"
          ]
        }
      ],
      "workflows": {
        "task_flow": ["specification", "implementation", "testing", "review", "documentation"],
        "review_requirements": {
          "code": ["tech-lead"],
          "design": ["ux-eng", "tech-lead"],
          "tests": ["test-engineer"]
        }
      }
    },
    "product": {
      "name": "Product Team",
      "description": "Product management and business analysis",
      "orchestrator": "product-director",
      "model_preference": "opus",
      "settings": {
        "max_parallel_agents": 3,
        "require_acceptance_criteria": true
      },
      "members": [
        {
          "agent": "product-manager",
          "role": "Product Management",
          "capacity": 1,
          "skills": ["requirements", "user_stories", "acceptance_criteria", "prioritization"],
          "model": "opus",
          "responsibilities": [
            "Define product requirements",
            "Write user stories",
            "Create acceptance criteria",
            "Prioritize backlog"
          ]
        },
        {
          "agent": "business-analyst",
          "role": "Business Analysis",
          "capacity": 1,
          "skills": ["requirements_analysis", "process_mapping", "data_analysis"],
          "model": "sonnet",
          "responsibilities": [
            "Analyze business requirements",
            "Map business processes",
            "Define success metrics",
            "Validate implementations"
          ]
        }
      ]
    },
    "qa": {
      "name": "QA Team",
      "description": "Quality assurance and testing",
      "orchestrator": "qa-director",
      "model_preference": "opus",
      "settings": {
        "max_parallel_agents": 4,
        "require_test_plan": true,
        "regression_testing": "mandatory"
      },
      "members": [
        {
          "agent": "qa-engineer-e2e",
          "role": "End-to-End Testing",
          "capacity": 2,
          "skills": ["e2e_testing", "user_journey_validation", "cross_browser_testing"],
          "model": "sonnet"
        },
        {
          "agent": "qa-engineer-scripts",
          "role": "Test Automation",
          "capacity": 2,
          "skills": ["test_scripting", "automation_frameworks", "ci_integration"],
          "model": "haiku"
        },
        {
          "agent": "qa-analyst",
          "role": "Quality Analysis",
          "capacity": 1,
          "skills": ["test_reporting", "metrics_analysis", "quality_trends"],
          "model": "haiku"
        }
      ]
    },
    "devops": {
      "name": "DevOps Team",
      "description": "Infrastructure and deployment management",
      "orchestrator": "devops-manager",
      "model_preference": "opus",
      "settings": {
        "max_parallel_agents": 3,
        "require_deployment_approval": true
      },
      "members": [
        {
          "agent": "ci-cd-engineer",
          "role": "CI/CD Pipeline Management",
          "capacity": 1,
          "skills": ["github_actions", "build_automation", "deployment_workflows"],
          "model": "sonnet"
        },
        {
          "agent": "infrastructure-engineer",
          "role": "Infrastructure Management",
          "capacity": 1,
          "skills": ["docker", "kubernetes", "terraform", "cloud_platforms"],
          "model": "sonnet"
        },
        {
          "agent": "release-manager",
          "role": "Release Coordination",
          "capacity": 1,
          "skills": ["version_management", "changelog_generation", "deployment_orchestration"],
          "model": "haiku"
        }
      ]
    }
  },
  "orchestration_settings": {
    "require_user_confirmation": true,
    "show_agent_preview": true,
    "show_resource_estimates": true,
    "max_total_agents": 10,
    "default_timeout_minutes": 30,
    "confirmation_thresholds": {
      "agents": 3,
      "tokens": 50000,
      "time_minutes": 15
    },
    "auto_orchestrate": false,
    "allowed_auto_operations": [],
    "notification_settings": {
      "on_start": true,
      "on_complete": true,
      "on_error": true
    }
  }
}