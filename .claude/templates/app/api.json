{
  "name": "api",
  "displayName": "REST API Service",
  "description": "Production-ready REST API with FastAPI, PostgreSQL, Redis caching, and OpenAPI documentation",
  "category": "app",
  "stack": {
    "primary": "FastAPI",
    "secondary": ["PostgreSQL", "Redis", "Alembic", "Docker"],
    "infrastructure": "Docker + Docker Compose"
  },
  "structure": {
    "root": "apps/{project}",
    "directories": [
      "app",
      "app/api",
      "app/api/v1",
      "app/api/v1/endpoints",
      "app/core",
      "app/db",
      "app/models",
      "app/schemas",
      "app/services",
      "app/utils",
      "app/middleware",
      "tests",
      "tests/api",
      "tests/unit",
      "tests/integration",
      "migrations",
      "scripts",
      "docs",
      ".docker"
    ]
  },
  "dependencies": {
    "system": ["docker", "git", "python3", "uv", "redis-server", "postgresql"],
    "development": {
      "runtime": {
        "fastapi": "^0.109.0",
        "uvicorn[standard]": "^0.27.0",
        "pydantic": "^2.5.0",
        "pydantic-settings": "^2.1.0"
      },
      "database": {
        "sqlalchemy": "^2.0.0",
        "alembic": "^1.13.0",
        "asyncpg": "^0.29.0",
        "databases": "^0.8.0"
      },
      "caching": {
        "redis": "^5.0.0",
        "hiredis": "^2.3.0"
      },
      "auth": {
        "python-jose[cryptography]": "^3.3.0",
        "passlib[bcrypt]": "^1.7.4",
        "python-multipart": "^0.0.6"
      },
      "testing": {
        "pytest": "^7.4.0",
        "pytest-asyncio": "^0.21.0",
        "pytest-cov": "^4.1.0",
        "httpx": "^0.25.0",
        "factory-boy": "^3.3.0"
      },
      "dev": {
        "ruff": "^0.1.0",
        "mypy": "^1.8.0",
        "pre-commit": "^3.6.0"
      }
    },
    "production": {
      "gunicorn": "^21.2.0",
      "prometheus-client": "^0.19.0",
      "sentry-sdk": "^1.39.0"
    }
  },
  "scripts": {
    "dev": "uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "gunicorn app.main:app -w 4 -k uvicorn.workers.UvicornWorker",
    "test": "pytest -v --cov=app --cov-report=term-missing",
    "test:unit": "pytest tests/unit -v",
    "test:integration": "pytest tests/integration -v",
    "migrate": "alembic upgrade head",
    "migrate:create": "alembic revision --autogenerate -m",
    "format": "ruff format .",
    "lint": "ruff check . --fix",
    "type-check": "mypy app",
    "docker:build": "docker build -t {project}-api .",
    "docker:run": "docker-compose up",
    "docs:serve": "uvicorn app.main:app --reload --port 8001"
  },
  "options": [
    "authentication-jwt",
    "database-postgresql",
    "caching-redis",
    "api-versioning",
    "rate-limiting",
    "cors-enabled",
    "openapi-docs",
    "health-checks",
    "metrics-prometheus",
    "logging-structured",
    "testing-comprehensive",
    "ci-github-actions"
  ],
  "notes": [
    "API runs on port 8000 by default",
    "OpenAPI docs available at /docs and /redoc",
    "Health check endpoint at /health",
    "Metrics endpoint at /metrics",
    "Database migrations managed by Alembic",
    "Redis used for caching and rate limiting",
    "JWT authentication with refresh tokens",
    "Structured logging with correlation IDs",
    "Pre-commit hooks for code quality"
  ],
  "agents": {
    "setup": ["engineering-api", "engineering-fullstack"],
    "enhance": ["engineering-test", "devops-infrastructure"],
    "review": ["engineering-lead", "qa-analyst"]
  }
}