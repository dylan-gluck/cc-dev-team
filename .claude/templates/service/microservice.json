{
  "name": "microservice",
  "displayName": "Microservice Template",
  "description": "Cloud-native microservice with Kubernetes deployment, service mesh ready",
  "category": "service",
  "stack": {
    "primary": "FastAPI/Go",
    "secondary": ["gRPC", "Kubernetes", "Istio", "Prometheus"],
    "infrastructure": "Kubernetes + Helm"
  },
  "structure": {
    "root": "apps/{project}",
    "directories": [
      "src",
      "src/api",
      "src/grpc",
      "src/domain",
      "src/infrastructure",
      "tests",
      "k8s",
      "k8s/base",
      "k8s/overlays",
      "helm",
      "scripts",
      ".github/workflows"
    ]
  },
  "dependencies": {
    "system": ["docker", "kubectl", "helm", "git"],
    "development": {},
    "production": {}
  },
  "scripts": {
    "dev": "skaffold dev",
    "test": "pytest && go test ./...",
    "build": "docker build -t {project}:latest .",
    "deploy": "helm upgrade --install {project} ./helm",
    "monitor": "kubectl port-forward svc/prometheus 9090:9090"
  },
  "options": [
    "service-mesh-istio",
    "observability-stack",
    "grpc-api",
    "event-driven",
    "circuit-breaker",
    "distributed-tracing"
  ],
  "notes": [
    "Kubernetes-native design",
    "Service mesh ready with Istio",
    "Distributed tracing with Jaeger",
    "Metrics with Prometheus",
    "Helm charts for deployment",
    "GitOps ready configuration"
  ],
  "agents": {
    "setup": ["engineering-api", "devops-infrastructure"],
    "enhance": ["devops-cicd", "engineering-test"],
    "review": ["engineering-lead", "devops-manager"]
  }
}