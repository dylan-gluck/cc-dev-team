{
  "name": "automation",
  "displayName": "Automation Tool",
  "description": "DevOps automation tool for CI/CD, infrastructure management, and deployment",
  "category": "tool",
  "stack": {
    "primary": "Python/Go",
    "secondary": ["Ansible", "Terraform", "GitHub Actions"],
    "infrastructure": "Cloud-agnostic"
  },
  "structure": {
    "root": "apps/{project}",
    "directories": [
      "src",
      "src/commands",
      "src/providers",
      "src/templates",
      "ansible",
      "ansible/playbooks",
      "ansible/roles",
      "terraform",
      "terraform/modules",
      "scripts",
      "configs",
      "tests"
    ]
  },
  "dependencies": {
    "system": ["python3", "ansible", "terraform", "git"],
    "development": {
      "python": {
        "click": "^8.1.0",
        "ansible": "^9.0.0",
        "python-terraform": "^0.10.0",
        "boto3": "^1.34.0",
        "kubernetes": "^29.0.0",
        "pyyaml": "^6.0.0"
      }
    },
    "production": {}
  },
  "scripts": {
    "dev": "python -m {project}",
    "test": "pytest tests/",
    "lint": "ansible-lint && tflint",
    "plan": "terraform plan",
    "apply": "terraform apply",
    "provision": "ansible-playbook -i inventory.yml playbook.yml"
  },
  "options": [
    "cloud-aws",
    "cloud-gcp",
    "cloud-azure",
    "kubernetes-integration",
    "vault-secrets",
    "monitoring-setup"
  ],
  "notes": [
    "Infrastructure as Code approach",
    "Multi-cloud support",
    "Idempotent operations",
    "Secure secrets management",
    "Audit logging built-in"
  ],
  "agents": {
    "setup": ["devops-infrastructure", "engineering-fullstack"],
    "enhance": ["devops-cicd", "engineering-test"],
    "review": ["devops-manager", "engineering-lead"]
  }
}